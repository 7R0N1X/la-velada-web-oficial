---
import LiteYouTube from "./LiteYouTube.astro"

interface Props {
	workout?: {
		videoID: string
		thumbnail: string
	}
}

const { workout = undefined } = Astro.props
const hasWorkout = workout !== undefined
---

{
	hasWorkout && (
		<section class="my-36 mx-auto max-w-6xl px-2 lg:px-10">
			<div class="text-center text-dark-magenta">
				<h3 class="text-4xl font-light">Entrenamiento</h3>
				<p class="text-2xl mt-5">Preparaci√≥n para el combate</p>
			</div>
			<div class="mt-10 pt-12">
				<LiteYouTube 
					videoId={workout.videoID} 
					backgroundImage={workout.thumbnail} 
				/>
			</div>
		</section>
	)
}