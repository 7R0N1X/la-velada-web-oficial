---
import { SPONSORS } from "@/consts/sponsors";

const firstRow = SPONSORS.slice(0, 5);
const secondRow = SPONSORS.slice(5);
---

<section id="sponsors" aria-label="Sponsors de la Velada del aÃ±o V">
  <div class="grid grid-cols-5 gap-4">
    {
      firstRow.map(({ url, image, name }) => (
        <a
          href={url}
          target="_blank"
          class="size-14 hover:scale-125 transition text-dark-magenta flex justify-center items-center"
        >
			<image.logo class="h-14 w-auto" alt={name} />
        </a>
      ))
    }
  </div>
  <div class="grid grid-cols-6 gap-4">
    {
      secondRow.map(({ url, image, name }) => (
        <a
          href={url}
          target="_blank"
          class="size-14 hover:scale-125 transition text-dark-magenta flex justify-center items-center"
        >
			<image.logo class="h-14 w-auto" alt={name} />
        </a>
      ))
    }
  </div>
</section>
