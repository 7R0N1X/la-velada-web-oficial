---
interface Props {
  fighter1: {
    id: string
    name: string
    percentage: number
  }
  fighter2: {
    id: string
    name: string
    percentage: number
  }
  overlay?: boolean
  totalVotes?: number
}

const { fighter1, fighter2, overlay = false, totalVotes } = Astro.props
---

<div
  class={[
    overlay
      ? 'absolute left-1/2 -translate-x-1/2 bottom-0 z-30 w-full flex justify-center'
      : 'w-full flex flex-col items-center',
    'pointer-events-none animate-fade-in-up flex-col justify-center items-center',
  ].join(' ')}
>
  <div
    class="pointer-events-auto relative flex h-12 w-full max-w-3xl overflow-hidden rounded-full border-2 border-white/20 bg-white/10 shadow-2xl md:h-14"
  >
    <!-- Barra del primer combatiente -->
    <div
      class="flex h-full flex-col items-center justify-center bg-gradient-to-r from-pink-500 via-pink-400 to-pink-300 font-bold text-white transition-all duration-300"
      style={`width: ${fighter1.percentage}%`}
    >
      <span
        class="text-xs font-extralight uppercase leading-none tracking-wider drop-shadow-md md:text-sm"
        >{fighter1.name}</span
      >
      <span class="mt-1 text-base leading-none drop-shadow-md md:text-lg"
        >{fighter1.percentage}%</span
      >
    </div>
    <!-- Separador diagonal -->
    <div class="-ml-2 h-full w-2 skew-x-12 bg-pink-300 shadow-lg"></div>
    <div class="-mr-2 h-full w-2 skew-x-12 bg-blue-300 shadow-lg"></div>
    <!-- Barra del segundo combatiente -->
    <div
      class="flex h-full flex-col items-center justify-center bg-gradient-to-l from-sky-400 via-sky-300 to-blue-300 font-bold text-white transition-all duration-300"
      style={`width: ${fighter2.percentage}%`}
    >
      <span
        class="text-xs font-extralight uppercase leading-none tracking-wider drop-shadow-md md:text-sm"
        >{fighter2.name}</span
      >
      <span class="text-base leading-none drop-shadow-md md:text-lg">{fighter2.percentage}%</span>
    </div>
  </div>

  <!-- Texto con el nÃºmero de votaciones -->
  {
    totalVotes && (
      <p class="mt-3 text-center text-xs lowercase text-white/70 drop-shadow-md">
        Basado en <span class="font-semibold text-white">{totalVotes.toLocaleString()}</span>{' '}
        votaciones de usuarios
      </p>
    )
  }
</div>

<style>
  .prediction-bar-container {
    width: 100%;
    max-width: 600px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .prediction-title {
    text-align: center;
    color: #ff1493;
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
  }

  .prediction-bar {
    display: flex;
    height: 60px;
    border-radius: 30px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    position: relative;
    animation: slideInUp 0.8s ease-out;
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fighter-bar {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    transition: all 0.3s ease;
    min-width: 60px;
    cursor: pointer;
  }

  .fighter-bar:hover {
    transform: scale(1.02);
    box-shadow: inset 0 0 30px rgba(255, 255, 255, 0.3);
  }

  .fighter1-bar {
    background: linear-gradient(135deg, #ff1493, #ff69b4);
    border-radius: 30px 0 0 30px;
    box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.2);
  }

  .fighter2-bar {
    background: linear-gradient(135deg, #00bfff, #87ceeb);
    border-radius: 0 30px 30px 0;
    box-shadow: inset 0 0 20px rgba(255, 255, 255, 0.2);
  }

  /* Efecto diagonal en el medio */
  .fighter1-bar::after {
    content: '';
    position: absolute;
    right: -20px;
    top: 0;
    width: 40px;
    height: 100%;
    background: linear-gradient(135deg, #ff1493, #ff69b4);
    transform: skewX(-15deg);
    z-index: 1;
  }

  .fighter2-bar::before {
    content: '';
    position: absolute;
    left: -20px;
    top: 0;
    width: 40px;
    height: 100%;
    background: linear-gradient(135deg, #00bfff, #87ceeb);
    transform: skewX(15deg);
    z-index: 1;
  }

  .fighter-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    z-index: 2;
    position: relative;
    color: white;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
    font-weight: bold;
  }

  .fighter-name {
    font-size: 0.9rem;
    font-weight: 700;
    margin-bottom: 2px;
  }

  .fighter-percentage {
    font-size: 1.2rem;
    font-weight: 900;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .prediction-bar {
      height: 50px;
    }

    .fighter-name {
      font-size: 0.8rem;
    }

    .fighter-percentage {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .prediction-bar {
      height: 45px;
    }

    .fighter-name {
      font-size: 0.7rem;
    }

    .fighter-percentage {
      font-size: 0.9rem;
    }
  }
</style>
